---
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content="A modern blog built with Astro" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --background: #f8faff;
    --text: #1e293b;
    --text-light: #64748b;
    --accent: #2563eb;
    --accent-light: #3b82f6;
    --accent-dark: #1d4ed8;
    --border: #e2e8f0;
    --blue-50: #eff6ff;
    --blue-100: #dbeafe;
    --blue-200: #bfdbfe;
    --blue-600: #2563eb;
    --blue-700: #1d4ed8;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    background: var(--background);
    color: var(--text);
    line-height: 1.6;
  }

  h1, h2, h3, h4, h5, h6 {
    color: var(--text);
    line-height: 1.2;
    margin: 2rem 0 1rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--blue-600) 0%, var(--blue-700) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
  }

  h3 {
    font-size: 1.75rem;
    font-weight: 600;
  }

  h4 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  h5 {
    font-size: 1.25rem;
    font-weight: 600;
  }

  h6 {
    font-size: 1rem;
    font-weight: 600;
  }

  p {
    margin: 1rem 0;
    color: var(--text);
  }

  ul, ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  li {
    margin: 0.5rem 0;
    position: relative;
  }

  ul li::before {
    content: "";
    position: absolute;
    left: -1.2rem;
    top: 0.6rem;
    width: 6px;
    height: 6px;
    background: var(--accent);
    border-radius: 50%;
  }

  ol {
    counter-reset: item;
    list-style: none;
  }

  ol li {
    counter-increment: item;
    padding-left: 0.5rem;
  }

  ol li::before {
    content: counter(item) ".";
    position: absolute;
    left: -1.5rem;
    color: var(--accent);
    font-weight: 600;
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  code {
    font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
    background: var(--blue-50);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--accent-dark);
    border: 1px solid var(--blue-100);
  }

  pre {
    background: var(--blue-50);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid var(--blue-100);
  }

  pre code {
    background: none;
    padding: 0;
    border: none;
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: var(--accent-dark);
    text-decoration: underline;
  }

  blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--accent);
    background: var(--blue-50);
    border-radius: 0 8px 8px 0;
  }

  blockquote p {
    margin: 0;
    color: var(--text);
  }

  hr {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  th, td {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }

  th {
    background: var(--blue-50);
    font-weight: 600;
    color: var(--text);
  }

  tr:last-child td {
    border-bottom: none;
  }

  tr:hover {
    background: var(--blue-50);
  }
</style>