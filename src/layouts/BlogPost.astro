---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <nav>
    <div class="nav-content">
      <a href="/" class="back-link">‚Üê Back to blog</a>
    </div>
  </nav>
  <main>
    <article class="blog-post">
      {frontmatter.image && (
        <div class="featured-image">
          <img src={frontmatter.image} alt={frontmatter.title} />
        </div>
      )}
      <div class="content-wrapper">
        <header>
          <h1>{frontmatter.title}</h1>
          <p class="date">{new Date(frontmatter.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}</p>
        </header>
        <div class="content">
          <slot />
        </div>
      </div>
    </article>
  </main>
</Layout>

<style>
  nav {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--blue-100);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .nav-content {
    max-width: 720px;
    margin: 0 auto;
    padding: 1rem;
  }

  .back-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
  }

  .back-link:hover {
    color: var(--accent-dark);
    transform: translateX(-4px);
  }

  main {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  .blog-post {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.1),
                0 2px 4px -2px rgba(37, 99, 235, 0.1);
    border: 1px solid var(--blue-100);
  }

  .featured-image {
    width: 100%;
    height: 360px;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content-wrapper {
    padding: 2rem;
  }

  header {
    margin-bottom: 2rem;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin: 0 0 1rem;
  }

  .date {
    color: var(--text-light);
    font-size: 1rem;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  @media (max-width: 640px) {
    main {
      padding: 1.5rem 1rem;
    }

    .featured-image {
      height: 240px;
    }

    .content-wrapper {
      padding: 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }
  }
</style>